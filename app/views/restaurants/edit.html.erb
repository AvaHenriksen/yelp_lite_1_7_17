<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant #<%= @restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant/<%= @restaurant.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_name -->
      <div class="form-group">
        <label for="restaurant_name" class="control-label">
          Restaurant name
        </label>

        <textarea id="restaurant_name" name="restaurant_name" placeholder="Restaurant name" class="form-control" rows="3"><%= @restaurant.restaurant_name %></textarea>
      </div>

      <!-- Label and input for tag -->
      <div class="form-group">
        <label for="tag" class="control-label">
          Tag
        </label>

        <input type="text" id="tag" name="tag" placeholder="Tag" class="form-control" value="<%= @restaurant.tag %>">
      </div>

      <!-- Label and input for average_rating -->
      <div class="form-group">
        <label for="average_rating" class="control-label">
          Average rating
        </label>

        <input type="text" id="average_rating" name="average_rating" placeholder="Average rating" class="form-control" value="<%= @restaurant.average_rating %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant
      </button>
      or
      <a href="/restaurants/<%= @restaurant.id %>">Cancel</a>
    </form>
  </div>
</div>
