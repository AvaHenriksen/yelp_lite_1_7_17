<div class="page-header">
  <h3>Restaurantdetail #<%= @restaurantdetail.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Restaurant</dt>
      <dd><%= @restaurantdetail.restaurant_id %></dd>

      <dt>Description</dt>
      <dd><%= @restaurantdetail.description %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Website</dt>
      <dd><%= @restaurantdetail.website %></dd>

      <dt>Cover photo</dt>
      <dd><img src="<%= @restaurantdetail.cover_photo %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restaurantdetails" class="btn btn-primary">
        Back
      </a>
      <a href="/restaurantdetails/<%= @restaurantdetail.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restaurantdetail/<%= @restaurantdetail.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @restaurantdetail.address_latitude %>,
        "lng": <%= @restaurantdetail.address_longitude %>,
        "infowindow": "<h5><%= @restaurantdetail.created_at %></h5><small><%= @restaurantdetail.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>