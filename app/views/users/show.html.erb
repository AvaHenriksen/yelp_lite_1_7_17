<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>Reviews</dt>
      <dd><%= @user.reviews %></dd>

      <dt>Average rating</dt>
      <dd><%= @user.average_rating %></dd>

      <dt>Number of reviews</dt>
      <dd><%= @user.number_of_reviews %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
